.order .tabs .order-list .cart-list-item {
  display: flex;
  height: 240rpx;
  padding: 0 20rpx;
  border-bottom: 1px solid #bdbdbd;
}
.order .tabs .order-list .cart-list-item .image {
  flex: 2;
  padding: 0 40rpx;
}
.order .tabs .order-list .cart-list-item .image navigator {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
}
.order .tabs .order-list .cart-list-item .image navigator image {
  width: 100%;
}
.order .tabs .order-list .cart-list-item .info {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.order .tabs .order-list .cart-list-item .info .info-text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.order .tabs .order-list .cart-list-item .info .info-buttomm {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order .tabs .order-list .cart-list-item .info .info-buttomm .price {
  font-size: 36rpx;
  color: red;
}
.order .tabs .order-list .cart-list-item .info .info-buttomm .num {
  display: flex;
}
